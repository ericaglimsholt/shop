@model List<E_commerce.Models.ProductsViewModel>

@{
    ViewBag.Title = "Home Page";
}

<div class="row">
 @foreach (var product in Model)
    {
        <div class="col-md-4">
            <h1></h1>
            <img style="width: 100%; height: auto;" class="img-fluid" src="@Url.Content("~/Content/img/" + product.ImgPath)" alt="@product.VideoTitle" /> <br />
            <h4>@(product.VideoTitle)</h4> 
            <p> @product.VideoPrice $</p> 

            @using (Html.BeginForm("AddToCart", "Cart"))
            {
                <input type="hidden" name="CartId" value="@(product.Id)" />
                <input type="hidden" name="ProductTitle" value="@(product.VideoTitle)" />
                <input type="hidden" name="ProductPrice" value="@(product.VideoPrice)" />
                <input type="hidden" name="ProductId" value="@(product.Id)" />
                <input class="btn btn-secondary" type="Submit" value="Add to Cart" />
            }
               
            

</div>
    }
</div>